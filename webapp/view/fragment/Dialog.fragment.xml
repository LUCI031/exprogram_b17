<c:FragmentDefinition 
    xmlns:c = "sap.ui.core"
    xmlns:t = "sap.ui.table"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:viz.data="sap.viz.ui5.data"
    xmlns = "sap.m">

    <Dialog id="idDialog"
            beforeOpen="onBeforeOpen"
            resizable="true"
            draggable="true"
            title="{items>/Carrname}"
            contentHeight="50%"
            contentWidth="40%">
            <content>
                <HBox >
                    <VBox >
                        <t:Table
                        id="idOrderTable"
                        rows="{items>/to_Item/results}"
                        selectionMode="Single"
                        rowSelectionChange="onSelect"
                        visibleRowCount="7"
                        paste="onPaste"
                        ariaLabelledBy="title">
                        <t:extension>
                            <OverflowToolbar style="Clear">
                                <Title id="title" text="Products" />
                            </OverflowToolbar>
                        </t:extension>
                        <t:columns>
                            <t:Column>
                                <Label text="Carrid" />
                                <t:template>
                                    <Text text="{items>Carrid}" wrapping="false" />
                                </t:template>
                            </t:Column>
                            <t:Column>
                                <Label text="Connid" />
                                <t:template>
                                    <Text text="{items>Connid}" wrapping="false"/>
                                </t:template>
                            </t:Column>
                            <t:Column>
                                <Label text="Seatsmax" />
                                <t:template>
                                    <Text text="{items>Seatsmax}" wrapping="false"/>
                                </t:template>
                            </t:Column>
                            <t:Column>
                                <Label text="Seatsocc" />
                                <t:template>
                                    <Text text="{items>Seatsocc}" wrapping="false"/>
                                </t:template>
                            </t:Column>
                        </t:columns>
                    </t:Table>
                    </VBox>
                    <VBox>
                        <viz:VizFrame id="idChart" vizType="bar" width="auto" height="600px" uiConfig="{applicationSet:'fiori'}"/>
                    </VBox>
                </HBox>
            </content>
            <endButton>
                <Button text="Close" press="onClose"/>
            </endButton>
    </Dialog>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    
</c:FragmentDefinition>